<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp">


    </ScrollView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="100dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/back">
        <ImageView
            android:id="@+id/frontimage"
            android:layout_width="215dp"
            android:layout_height="215dp"

            app:srcCompat="@drawable/img"
            tools:srcCompat="@drawable/ic_person_outline_black_24dp" />
    </com.google.android.material.card.MaterialCardView>





    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="300dp"
        android:text="username"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="350dp"
        android:text="Hyderabad"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="370dp"

        android:orientation="vertical"
        android:paddingLeft="65dp"
        android:paddingTop="30dp">


        <Button
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonp"
            android:text="My post" />

        <Button
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonp"
            android:text="Settings" />

        <Button
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonp"
            android:text="privarcy" />

        <Button
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonp"
            android:text="About app" />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blueg"


        app:itemIconTint="@drawable/selector"

        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"></com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>